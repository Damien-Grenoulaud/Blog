<h3>Recherchez un article :</h3>
<%= form_with model: @article, local: true,method: :get, class: "mb-4" do |form| %>
  <div class="flex gap-4">
    <div class="appinput">
      <%= form.label :title, "Titre :"  %><br>
      <%= form.text_field :title, placeholder: "Titre...", value: params[:title] %>

      <%= form.label :categorie, "CatÃ©gorie :"  %><br>
      <%= form.select :categorie, options_for_select(Article.categories.map {|key, value| [key.titleize, Article.categories.key(value)]}, params[:categorie]) %>

      

    </div>
    <%= form.submit :Recherchez, class: "link" %>
  </div>
<% end %>